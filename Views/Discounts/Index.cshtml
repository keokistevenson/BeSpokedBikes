@model IEnumerable<BeSpokedBikes.Models.Discount>

@{
    ViewData["Title"] = "Index";
}

<h1>Discounts</h1>

<p>
    <a asp-action="Create" class="text-decoration-none">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BeginDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPercentage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BeginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountPercentage)
            </td>
            <td>
                    <a asp-action="Edit" class="text-decoration-none" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="text-decoration-none" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="text-decoration-none" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
