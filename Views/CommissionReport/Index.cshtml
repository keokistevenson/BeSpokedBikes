@model IEnumerable<BeSpokedBikes.Models.CommissionReportViewModel>

@{
    ViewData["Title"] = "Commission Report";
}

<h2>Commission Report</h2>

<!-- Filter Form -->
<form method="get" asp-controller="CommissionReport" asp-action="Index" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="quarter">Quarter:</label>
        <select id="quarter" name="quarter" class="form-control ml-2">
            @foreach (var q in (List<int>)ViewBag.Quarters)
            {
                if (q == (int)ViewBag.SelectedQuarter)
                {
                    <option value="@q" selected="selected">@q</option>
                }
                else
                {
                    <option value="@q">@q</option>
                }
            }
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="year">Year:</label>
        <select id="year" name="year" class="form-control ml-2">
            @foreach (var y in (List<int>)ViewBag.Years)
            {
                if (y == (int)ViewBag.SelectedYear)
                {
                    <option value="@y" selected="selected">@y</option>
                }
                else
                {
                    <option value="@y">@y</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Commission Report Table -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Salesperson</th>
            <th>Total Commission</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.TotalCommission.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
