@model IEnumerable<BeSpokedBikes.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.First().FirstName)</th>
        <th>@Html.DisplayNameFor(model => model.First().LastName)</th>
        <th>@Html.DisplayNameFor(model => model.First().Address)</th>
        <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
        <th>@Html.DisplayNameFor(model => model.First().StartDate)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.Address)</td>
            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
        </tr>
    }

</table>